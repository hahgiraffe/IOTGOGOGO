/* Home.wxss */
.container {
    background-color: lightgray;
}

.topView {
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  bottom: 5%;
  top: 5%;
  border-radius: 12px;
  background-color: rgb(62, 62, 68);
}

.topImage{
  width: 100%;
  height: 180px;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}

.textView{
  display: flex;
  flex-direction: column;
  margin-top: 10px;

}

.titleView{
    text-align: center;
}

.title{
  color: white;
  font-size: 16px;
  text-align: center;
}

.timeView{

  text-align: center;
  flex-direction: row;
  margin-top: 2px;
}

.timeImage{
  width: 12px;
  height: 12px;
}

.textText{
  margin-left:-12px;
  color: white;
  font-size: 13px;
  
}

.desView{
  text-align: center;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  font-size: 30px;
  border-top:1px solid gray;
}

.clickView{
  margin-top: 30px;
  display: flex;
  flex-direction: column;
}

.clickImage{
  width: 40px;
  height: 40px;
  align-self: center;
}

.desText{
    text-align: center;
    font-size:18px;
    line-height:2;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:3;
    margin-top:10px;
    color: lightgray;
    
}

.aboutText
{
  font-size:15px;
  color:lightgray;
  margin-left:10px;
  margin-right:10px;
}
.aboutText1
{
  font-size:18px;
  color:lightgray;
  margin-left:10px;
  margin-right:10px;
  text-align:center;
}