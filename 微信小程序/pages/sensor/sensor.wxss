page {
  display: block;
  min-height: 100%;
  background-color: #009ad6;
}
.mod-item{
 width:46%;
 height:300rpx;
 float: left;
 margin-left:20rpx;
 margin-top:40rpx;
 position: relative;
}
.mod-signup{
  position: absolute;
}
.mod-signup image{
  width:76rpx;
  height:20rpx;
  
}
.mod-img{
  width:100%;
  border-radius: 1em;
  margin-bottom: 10px;
  margin-top: 5px;
  height:250rpx;

} 


.mod-image{
  margin-left:29px;  
  margin-top:10px;  
  bottom: 20px;
  width:68.5%;
  height:235rpx;
  border-radius:110px;
  border:#ffffff 2.5px solid;
  
} 
.modr-image{
  bottom: 20px;
  width:68.5%;
  height:235rpx;
  border-radius:110px;
  margin-left: 22px;
  margin-top:10px;  
  border:#ffffff 2.5px solid; 
} 

.mod-title{
  font-size:30rpx;
  font-family: '';
  display:flex;
  height:60rpx;
  margin-top:-3rpx;
  margin-bottom:-10rpx;
  flex-direction:column;
  justify-content: center; 
  text-overflow: ellipsis;
  overflow: hidden;
  align-items: center;
  color: #ffffff; 
}
.modr-title{
  font-size:30rpx;
  font-family: '';
  display:flex;
  height:60rpx;
  margin-top:-3rpx;
  margin-bottom:20rpx;
  margin-left:-18px;
  flex-direction:column;
  justify-content: center; 
  text-overflow: ellipsis;
  overflow: hidden;
  align-items: center;
  color: #ffffff; 
}
.mod-info{
  display: flex;
  flex-direction: column;
  height:60rpx;
}
.mod-icon{
  display: flex;
  flex-direction: row;
  width: 40rpx;
  height: 40rpx;
}
.icon{
  width: 40rpx;
  height: 50rpx;
}
.moinfont{
  font-size: 28rpx;
  text-indent: 60rpx;
  font-family:  'Arial Narrow Bold';
  color:#bfbfbf;
}

.more-info{
  display: flex;
  flex-direction: column;
  font-size:32rpx;
  font-family:  'Arial Narrow Bold';
  line-height: 98rpx;
  text-indent: 30rpx;
  color:#586C94;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx; 
  
}

 

.input {
  width: 100%;
  height: 60rpx;
  font-size: 15rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #009ad6;
  text-align: center;
}
